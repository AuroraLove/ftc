<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.auroralove.ftctoken.mapper.UserMapper">
    <sql id="USER" >ftc_user</sql>
    <sql id="DEAL" >ftc_deal</sql>
    <sql id="PAYINFO" >ftc_user_payinfo</sql>
    <sql id="MESSAGE" >ftc_message</sql>

    <select id="findByUserphone" resultType="com.auroralove.ftctoken.model.UserModel">
      SELECT id,password FROM ftc_user
      where
      phone=#{phone}
    </select>

    <select id="findUserById" resultType="com.auroralove.ftctoken.model.UserModel">
        SELECT id,phone,password,teamid,admin_status FROM ftc_user
      where
      id=#{id}
    </select>

    <insert id="newUser" parameterType="com.auroralove.ftctoken.model.UserModel"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO
        <include refid="USER" />
        (
        id,
        parent_id,
        phone,
        password,
        teamid,
        regist_time
        )
        VALUES
        (
        #{id},
        #{parentId},
        #{phone},
        #{passWord},
        #{teamId},
        NOW()
        )
    </insert>

    <insert id="recharge" parameterType="com.auroralove.ftctoken.model.DealModel"
            useGeneratedKeys="true"
            keyProperty="tid">
        INSERT INTO
        <include refid="DEAL" />
        (
        tid,
        uid,
        deal_amount,
        deal_date,
        type
        )
        VALUES
        (
        #{dealId},
        #{userId},
        #{amount},
        NOW(),
        #{type}
        )
    </insert>

    <update id="rechargeFlag">
        UPDATE <include refid="USER" />
        SET flag = #{flag}
        WHERE id = #{id}
    </update>
    
     <update id="changeLoginPwd">
        UPDATE <include refid="USER" />
        SET password = #{password}
        WHERE id = #{id}
    </update>
    
     <update id="changePayPwd">
        UPDATE <include refid="USER" />
        SET PAY_PWD = #{pay_pwd}
        WHERE id = #{id}
    </update>


    <insert id="uploadMsg" >
        INSERT INTO
        <include refid="MESSAGE" />
        (id,uid,leaving_date,  msg, pic_url) 
        VALUES
        (
        #{id},
        #{uid},
        NOW(),
        #{message},
        #{url}
        )
    </insert>
    
        <insert id="replayMsg" >
        UPDATE
        <include refid="MESSAGE" />
        (replay_date,  r_msg, pic_url) 
        VALUES
        (
        NOW(),
        #{message},
        #{url}
        )
        WHERE id=#{mesId}
    </insert>
    
    <select id="messageInfo" resultType="com.auroralove.ftctoken.model.MessageModel">
        SELECT msg,r_msg,leaving_date,replay_date FROM ftc_message
      where
      uid=#{uid}
    </select>
</mapper>